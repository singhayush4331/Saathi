  "accessibility": {
    "contrast": "Ensure text is #1A2E26 on light backgrounds.",
    "focus_states": "focus:ring-2 focus:ring-[#4A8B71] focus:ring-offset-2",
    "aria_labels": "Required for all icon-only buttons."
  },
  "universal_guidelines": [
    "Mobile-First: Design for small screens first, then scale up.",
    "Emotional Safety: Avoid red for errors unless critical (use soft orange/amber instead). Use Green for success.",
    "Data Privacy: Add 'Confidential' badges near chat and booking forms.",
    "Cultural Context: Use respectful, inclusive language suitable for Indian users.",
    "Crisis Detection: If user types 'suicide' or 'harm', immediately show the Crisis Banner (Red/White) with helpline numbers.",
    "No 'Lorem Ipsum': Use realistic placeholder text related to relationships and mental health.",
    "Use 'sonner' for toast notifications.",
    "All interactive elements MUST have data-testid attributes."
  ]
