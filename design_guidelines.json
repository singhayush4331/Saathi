{
  "brand_identity": {
    "name": "Saathi",
    "mission": "Confidential Relationship Support Platform",
    "tone": "Calm, Emotionally Safe, Trustworthy, Non-judgmental",
    "target_audience": "Indians 18+ facing relationship issues",
    "archetype": "Organic & Earthy (Trust, Growth, Calm)"
  },
  "typography": {
    "font_family": {
      "headings": "Nunito, sans-serif",
      "body": "Inter, sans-serif",
      "accent": "Caveat, cursive"
    },
    "weights": {
      "headings": "font-bold",
      "body": "font-normal",
      "accent": "font-medium"
    },
    "sizes": {
      "h1": "text-4xl md:text-5xl lg:text-6xl tracking-tight",
      "h2": "text-3xl md:text-4xl tracking-tight",
      "h3": "text-2xl md:text-3xl font-semibold",
      "body": "text-base md:text-lg leading-relaxed",
      "small": "text-sm text-muted-foreground"
    },
    "installation": "Import fonts in index.css: @import url('https://fonts.googleapis.com/css2?family=Nunito:wght@400;600;700&family=Inter:wght@400;500;600&family=Caveat:wght@400;700&display=swap');"
  },
  "colors": {
    "palette": {
      "primary": {
        "name": "Saathi Sage",
        "hex": "#4A8B71",
        "tailwind": "bg-[#4A8B71] text-white hover:bg-[#3D745E]"
      },
      "secondary": {
        "name": "Calm Sky",
        "hex": "#E0F2F1",
        "tailwind": "bg-[#E0F2F1] text-[#2C5F4C]"
      },
      "accent": {
        "name": "Warm Sand",
        "hex": "#F5F0E6",
        "tailwind": "bg-[#F5F0E6]"
      },
      "text": {
        "primary": "#1A2E26",
        "secondary": "#4A665A",
        "muted": "#8C9E96"
      },
      "background": {
        "default": "#FAFAF9",
        "paper": "#FFFFFF"
      },
      "status": {
        "success": "#10B981",
        "error": "#EF4444",
        "warning": "#F59E0B",
        "info": "#3B82F6"
      }
    },
    "usage_rules": [
      "Use 'Saathi Sage' for primary actions (Buttons, Active States).",
      "Use 'Calm Sky' for secondary backgrounds and active tab states.",
      "Use 'Warm Sand' for section backgrounds to break up white space.",
      "Text should never be pure black (#000000). Use #1A2E26 for high contrast.",
      "Avoid harsh gradients. Use solid, soft colors."
    ]
  },
  "layout": {
    "spacing": {
      "container_padding": "p-4 md:p-8 lg:p-12",
      "section_gap": "gap-8 md:gap-16",
      "element_gap": "gap-4"
    },
    "grid_system": {
      "dashboard": "grid grid-cols-1 md:grid-cols-3 lg:grid-cols-4 gap-6",
      "marketing": "grid grid-cols-1 md:grid-cols-12 gap-8",
      "cards": "grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6"
    },
    "border_radius": {
      "default": "rounded-xl",
      "large": "rounded-2xl",
      "button": "rounded-full"
    },
    "shadows": {
      "card": "shadow-[0_2px_8px_rgba(0,0,0,0.04)] hover:shadow-[0_4px_12px_rgba(0,0,0,0.08)] transition-shadow duration-300",
      "dropdown": "shadow-lg border border-border/50"
    }
  },
  "components": {
    "buttons": {
      "primary": "bg-[#4A8B71] text-white hover:bg-[#3D745E] rounded-full px-8 py-6 font-semibold shadow-sm transition-all hover:scale-[1.02]",
      "secondary": "bg-[#E0F2F1] text-[#2C5F4C] hover:bg-[#B2DFDB] rounded-full px-8 py-6 font-medium transition-all",
      "ghost": "hover:bg-[#F5F0E6] text-[#4A665A] rounded-full px-6 py-4"
    },
    "cards": {
      "style": "bg-white rounded-2xl border border-[#E6E6E6] p-6 shadow-[0_2px_8px_rgba(0,0,0,0.04)]",
      "hover_effect": "hover:border-[#4A8B71]/30 hover:shadow-md transition-all duration-300"
    },
    "inputs": {
      "style": "rounded-xl border-gray-200 focus:border-[#4A8B71] focus:ring-[#4A8B71]/20 bg-gray-50/50 h-12"
    },
    "navigation": {
      "mobile": "Fixed bottom navigation bar with icons for Home, Chat, Book, Profile.",
      "desktop": "Top navigation with clear separation between 'Get Help' and 'For Psychologists'."
    }
  },
